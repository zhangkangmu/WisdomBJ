<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hong.zyh.wisdombj">

    <!--xUtils联网需要请求的权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_150"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_150"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--此处可以更改PageIndicatorDefaults的样式，点进去就可以看到-->
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.PageIndicatorDefaults"></activity>
        <activity android:name=".GuideActivity"></activity>
    </application>

</manifest>